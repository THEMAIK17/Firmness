@page
@model Firmness.Web.Pages.Sales.IndexModel
@{
    ViewData["Title"] = "Historial de Ventas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Historial de Ventas</h1>
    <a asp-page="Create" class="btn btn-primary">Registrar Nueva Venta</a>
</div>

<table class="table table-striped table-hover">
    <thead class="table-dark">
    <tr>
        <th>ID (#)</th>
        <th>Fecha</th>
        <th>Cliente</th>
        <th>Total</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Sales)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.SaleDate.ToLocalTime().ToString("g")</td>
            <td>
                @item.Client.FullName <br/>
                <small class="text-muted">@item.Client.DocumentNumber</small>
            </td>
            <td class="fw-bold text-success">$@item.TotalAmount.ToString("N2")</td>
            <td>
                @{
                    var pdfName = $"Receipt_Sale_{item.Id}_*.pdf";
                }
                    
                <a asp-page-handler="DownloadPdf" asp-route-id="@item.Id" target="_blank" class="btn btn-sm btn-outline-danger">
                    <i class="bi bi-file-pdf"></i> Descargar PDF
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>