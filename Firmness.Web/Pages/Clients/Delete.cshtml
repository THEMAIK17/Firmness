@page
@model Firmness.Web.Pages.Clients.DeleteModel
@{
    ViewData["Title"] = "Delete Client";
}

<h1>Delete Client</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}

<h3>Are you sure you want to delete this client?</h3>
<div>
    <h4>@Model.Client.FullName (@Model.Client.Email)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Client.FirstName)</dd>
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Client.LastName)</dd>
        <dt class="col-sm-2">Document</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Client.DocumentNumber)</dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Client.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>