@page
@model Firmness.Web.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <h4>@Model.Product.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Product.Name)</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Product.Description)</dd>
        <dt class="col-sm-2">Unit Price</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Product.UnitPrice)</dd>
        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Product.Stock)</dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
